    "clean": "del-cli js/",
    "lint": "tslint 'ts/**/*.ts?(x)' || exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhases/rhases-nodejs-commons.git"
  },
  "keywords": [
    "npm",
    "nodejs",
    "express",
    "mongoose",
    "utils"
  ],
  "author": "Marcos Godinho <marcos.godinho@rhases.com.br>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rhases/rhases-nodejs-commons/issues"
  },
  "homepage": "https://github.com/rhases/rhases-nodejs-commons#readme",
  "engines": {
    "node": ">=4.1.1"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "pino": "^4.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.0.36",
    "@types/mongoose": "^4.7.19",
    "chai": "^3.5.0",
    "chai-string": "^1.2.0",
    "del-cli": "^0.2.0",
    "express": "^4.15.3",
    "ghooks": "^1.2.4",
    "mocha": "^2.5.3",
    "mongoose": "^4.11.5",
    "tslint": "^3.12.1",
    "tslint-microsoft-contrib": "^2.0.8",
    "typescript": "^1.8.10",
    "typings": "^1.3.1"
