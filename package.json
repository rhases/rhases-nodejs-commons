{
  "name": "rhases-nodejs-commons",
  "version": "0.1.0",
  "description": "Node.js utilities",
  "main": "js/index.js",
  "typings": "js/index.d.ts",
  "scripts": {
    "postinstall": "typings install",
    "preversion": "npm run compile && npm test",
